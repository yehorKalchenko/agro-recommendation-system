# ===================
# Database Configuration
# ===================

# Enable database mode
USE_DATABASE=false

POSTGRES_USER=postgres
POSTGRES_PASSWORD=yourpassword
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=agrodiag

# Enable SQL query logging
DB_ECHO=false

# ===================
# Data & File Limits
# ===================

AGRO_DATA_ROOT=./data
AGRO_MAX_IMAGES=4
AGRO_MAX_IMAGE_MB=5
AGRO_ALLOWED_MIME=image/jpeg,image/png,image/webp

# ===================
# Scoring & RAG
# ===================

AGRO_SCORING_ALPHA=0.6
AGRO_RAG_MODE=tfidf

# ===================
# AWS Rekognition (Optional)
# ===================

AGRO_USE_REKOGNITION=true
AGRO_REKOGNITION_REGION=us-east-1
AGRO_REKOGNITION_PROJECT_ARN=arn:aws:rekognition:us-east-1:ACCOUNT:project/agrodiag/PROJECT_ID
AGRO_REKOGNITION_MODEL_ARN=arn:aws:rekognition:us-east-1:ACCOUNT:project/agrodiag/version/MODEL/VERSION_ID

# ===================
# AWS Bedrock LLM (Optional)
# ===================

AGRO_LLM_MODE=stub
# Options: stub, bedrock
AGRO_BEDROCK_REGION=us-east-1
AGRO_BEDROCK_MODEL_ID=amazon.nova-micro-v1:0

# ===================
# AWS S3 Image Storage (Optional)
# ===================

USE_S3=false
S3_BUCKET=agrodiag-images
S3_REGION=us-east-1

# ===================
# AWS Credentials
# ===================

AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key

# ===================
# API Authentication
# ===================

REQUIRE_API_KEY=false
API_KEY_HEADER=X-API-Key
